<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="@style/Theme.AppCompat.Light.DarkActionBar"/>

    <style name="MainTheme" parent="AppTheme.Base">
        <!--your app branding color for the app bar -->
        <item name="colorPrimary">@color/blue_500</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/blue_700</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/green_200</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="DisplayMessageTheme" parent="AppTheme.Base">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/green_500</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/green_700</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/light_blue_200</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/titleStyle</item>
        <item name="titleTextStyle">@style/titleStyle</item>
    </style>

    <style name="titleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/red_100</item>
    </style>

</resources>
